@model SpcBowling.Models.Score

@{
    ViewBag.Title = "Delete Score";
}

<h3>Confirm Score Delete? @Model.BowlingScore</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Player.FullName)</dt>
        <dd>@Html.DisplayFor(model => model.Player.FullName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>

        <dt>@Html.DisplayNameFor(model => model.BowlingScore)</dt>
        <dd>@Html.DisplayFor(model => model.BowlingScore)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to Edit", "Edit", "Score", new { id=Model.ScoreID }, new { @class = "btn btn-primary btn-sm" }) |
            <input type="submit" value="Delete" class="btn btn-primary btn-sm" />
        </div>
    }
</div>
