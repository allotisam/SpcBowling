@model SpcBowling.ViewModels.PlayerStatsViewModel

@{
    ViewBag.Title = "Stats";
}

<h3>Today's Players Stats</h3>

<div class="dl-horizontal">
    <hr />

    <div class="form-group">
        <label>Best Scratch Scorer: </label>
        @Html.DisplayFor(model=>model.DailyStats.BestScratchScorer): @Html.DisplayFor(model=>model.DailyStats.BestHandiScore)
    </div>
    <div class="form-group">
        <label>Worst Scratch Scorer: </label>
        @Html.DisplayFor(model => model.DailyStats.WorstScratchScorer): @Html.DisplayFor(model => model.DailyStats.WorstScratchScore)
    </div>
    <div class="form-group">
        <label>Best Handicap Scorer: </label>
        @Html.DisplayFor(model=>model.DailyStats.BestHandiScorer): @Html.DisplayFor(model=>model.DailyStats.BestHandiScore)
    </div>
    <div class="form-group">
        <label>Worst Handicap Scorer: </label>
        @Html.DisplayFor(model=>model.DailyStats.WorstHandiScorer): @Html.DisplayFor(model=>model.DailyStats.WorstHandiScore)
    </div>
</div>

<div>
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-primary btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/spcbowl")
}
